          <m:msub>
            <m:mi>S</m:mi>
            <m:mi>N</m:mi>
          </m:msub>
</m:mtd>
<m:mtd>       
   <m:mo>=</m:mo>
</m:mtd>
<m:mtd>       
   <m:munderover>
<m:mrow>
            <m:mo>∑</m:mo>
</m:mrow>        
