                <m:mi mathvariant="normal">w</m:mi>
                <m:mo>,</m:mo>
                <m:mi mathvariant="normal">x</m:mi>
                <m:mo>)</m:mo>
              </m:mrow>
              <m:mrow>
                <m:mo>(</m:mo>
                <m:mi mathvariant="normal">x</m:mi>
