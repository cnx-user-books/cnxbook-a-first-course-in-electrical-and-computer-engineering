                  <m:mo>)</m:mo>
                </m:mrow>
                <m:mn>2</m:mn>
              </m:msup>
              <m:msup>
                <m:mrow>
                  <m:mo>(</m:mo>
                  <m:mi mathvariant="normal">x</m:mi>
                  <m:mo>,</m:mo>
                  <m:mi mathvariant="normal">x</m:mi>
                  <m:mo>)</m:mo>
                </m:mrow>
                <m:mn>2</m:mn>
              </m:msup>
            </m:mfrac>
            <m:mrow>
              <m:mo>(</m:mo>
              <m:mi mathvariant="normal">x</m:mi>
