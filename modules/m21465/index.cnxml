            <m:mspace width="4.pt"/>
            <m:mi mathvariant="normal">w</m:mi>
            <m:mo>-</m:mo>
            <m:mfrac>
              <m:mrow>
                <m:mo>(</m:mo>
                <m:mi mathvariant="normal">w</m:mi>
                <m:mo>,</m:mo>
