            <m:mrow>
              <m:mi>j</m:mi>
              <m:mi>ψ</m:mi>
            </m:mrow>
          </m:msup>
    </m:mtd>
</m:mtr>
<m:mtr>
<m:mtd/>
<m:mtd>
          <m:mo>=</m:mo>
</m:mtd>
<m:mtd>
          <m:mfrac>
